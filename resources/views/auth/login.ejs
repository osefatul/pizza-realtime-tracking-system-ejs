<section class="login flex justify-center pt-24">
    <div class="w-full max-w-xs ">
        
        <!--When using POST method we are sending name attributes of element in the form to the server...  -->
        <form 
        action="/login" 
        method="POST"
        class="bg-[#0d1117] shadow-md rounded-md p-8 space-y-6">
            <% if(messages.error) { %>
            <span class="text-red-500 text-sm flex items-center justify-center">
                <%= messages.error %>
            </span>
            <% } %>
            <div>
                <label class="block text-white text-sm font-bold mb-2" for="username">
                    Email
                </label>
                <input name="email"
                    class="shadow appearance-none bg-[#303030] border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                    id="username" type="email" placeholder="Enter your email">
            </div>

            <div>
                <label class="block text-white text-gray-700 text-sm font-bold mb-2" for="password">
                    Password
                </label>
                <input name="password"
                    class="shadow appearance-none bg-[#303030] border rounded w-full py-2 px-3 text-gray-700 mb-3 leading-tight focus:outline-none focus:shadow-outline"
                    id="password" type="password" placeholder="******************">
            </div>

            <div class="flex items-center justify-between">
                <button
                    class="btn-primary py-2 px-4 rounded-full text-white font-bold rounded focus:outline-none focus:shadow-outline"
                    type="submit">
                    Log In
                </button>
                <a class="inline-block align-baseline font-bold text-sm"
                href="/register">
                    Don't have account?
                </a>
            </div>
        </form>
        <p class="text-center text-gray-500 text-xs">
        </p>
    </div>
</section>